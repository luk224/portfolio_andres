---

import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const projects = await(getCollection('projects'))

---

<Layout title="Andres Felipe Portfolio">
	<nav class="fixed top-0 left-0 w-full bg-[#0B1120] shadow-md z-50">
		<div class="max-w-screen-xl mx-auto px-6 py-4 flex justify-center gap-6 text-white text-2xl font-medium">
			<a href="#projects" class="hover:text-blue-400 transition">Projects</a>
			<a href="#studies" class="hover:text-blue-400 transition">Studies</a>
			<a href="#skills" class="hover:text-blue-400 transition">Skills</a>
		</div>
	</nav>
	<div class="px-2 md:px-4 lg:px-20 mx-auto max-w-screen-xl">
		<section class="text-center bg-[#0B1120] py-24">
			<h2 class="text-center text-6xl font-extrabold mb-14">Andr√©s Felipe</h2>
			<h2 class="text-center text-5xl font-extrabold mb-10">Demo Reel</h2>
			<div class="mx-auto max-w-5xl aspect-video border=none">
				<iframe 
				class="w-full h-full rounded-xl shadow-lg"
				
				src="https://www.youtube.com/embed/eMfcm_q7V80?si=KbWdc0T--wQVgEh5" 
				title="Demo Reel"
				
				allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
				allowfullscreen>
				</iframe>
			</div>
		</section>
		<section id="projects" aria-label="Participated in projects" class="bg-[#1f2a41] py-14">
			<h1 class="text-center text-5xl font-extrabold mb-20">Experience ü¶¥</h1>
				<div class="px-8 md:px-4">
					<div class="grid gap-6 md:grid-cols-2 auto-rows-auto">
						{
							projects.map(project => {
								const {slug, data} = project
								const {title, author, description, img, experience, extra} = data
								const {youtube, website} = extra
								return (
									<article class="w-full flex gap-6 flex-wrap">
										<div class="w-full md:w-60 shrink-0">
										<a href={`/project/${slug}`}class="mb-2 xl:mb-0 transition hover:scale-105 ">
											<img
												transition:name={`img-${slug}`}	
												class="h-72 w-auto object-cover rounded"
												src={`/${img}`}
												alt ={title}/>
										</a>
										</div>
										<div class="relative flex flex-col justify-start flex-1">
											<div>
												<h2 transition:name={`title-${slug}`} class="mb-2 text-3xl font-bold leading-tight text-white">{title}</h2>
												<h3 class="mb-2 text-2xl leading-tight text-white">{author}</h3>
												<h5 class="mb-4 text-l leading-tight text-white">{experience}</h5>
												<p class="mb-2 text-gray-300 max-w-sm">{description}</p>
											</div>
											<div class="bottom-2 flex gap-4  justify-start">
												<a href={youtube} target="_blank" rel="noopener noreferrer" aria-label="YouTube">
													<svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 transition hover:scale-150" viewBox="0 0 24 24" fill="currentColor">
														<path d="M19.615 3.184C21.116 3.464 22.245 4.716 22.5 6.253c.291 1.71.291 5.277.291 5.277s0 3.566-.291 5.277c-.255 1.537-1.384 2.789-2.885 3.069C17.578 20.5 12 20.5 12 20.5s-5.578 0-7.615-.624C2.884 19.596 1.755 18.344 1.5 16.807.961 14.697.961 11.53.961 11.53s0-3.566.291-5.277c.255-1.537 1.384-2.789 2.885-3.069C6.422 1.5 12 1.5 12 1.5s5.578 0 7.615.624zM9.75 15.27l6.25-3.77-6.25-3.77v7.54z"/>
													</svg>
												</a>
												<a href={website} target="_blank" rel="noopener noreferrer" aria-label="Website">
													<svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 transition hover:scale-150" fill="none" viewBox="0 0 24 24" stroke="currentColor">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2a10 10 0 100 20 10 10 0 000-20zm0 0c2.5 0 4.5 4.5 4.5 10S14.5 22 12 22s-4.5-4.5-4.5-10S9.5 2 12 2z" />
													</svg>
												</a>
											</div>
										</div>
									</article>
								)
							})
						}
					</div>
				</div>
		</section>
		<section id="studies" aria-label="Education" class="bg-[#0B1120] py-14 px-20">
			<h2 class="text-center text-5xl font-extrabold mb-10 ">Studies üéì</h2>
			<div class="space-y-12">
				<!-- Lightbox Academy -->
				<div class="bg-[#18202e] rounded-xl p-6 shadow-md"> 
					<div class="flex gap-6 items-start">
						<img src="/logo/lightbox_academy.jpg" alt="Lightbox Academy Logo" class="w-16 h-16 object-contain mt-1" />
						<div>
						<h3 class="text-2xl font-bold text-white">Lightbox Academy</h3>
						<p class="text-gray-300 mb-1">Professional Rigging Course ¬∑ 2018 ‚Äì 2019</p>
						<ul class="list-disc list-inside text-gray-400 text-sm mb-2">
							<li>Rigs for inorganic and organic characters</li>
							<li>Biped & quadruped rigging</li>
							<li>Topology verification, skinning, facial rig</li>
							<li>Modifiers, MEL & Python scripting</li>
							<li>Procedural Rigging in Maya</li>
						</ul>
						<p class="text-sm text-blue-400">
							<a href="https://lboxacademy.es/animacion/curso-profesional-de-rigging/" target="_blank" rel="noopener">Course Website</a>
						</p>
						<p class="text-sm text-gray-400 mt-2">Skills: Control Systems, ZBrush, Autodesk Maya, Character Rigging</p>
						</div>
					</div>	
				</div>
				<!-- Universidad Rey Juan Carlos -->
				<div class="bg-[#18202e] rounded-xl p-6 shadow-md"> 
					<div class="flex gap-6 items-start">
						<img src="/logo/URJC.jpg" alt="URJC Logo" class="w-16 h-16 object-contain mt-1" />
						<div>
						<h3 class="text-2xl font-bold text-white">Universidad Rey Juan Carlos</h3>
						<p class="text-gray-300 mb-1">Video Games Design & Development Degree ¬∑ 2015 ‚Äì 2019</p>
						<p class="text-sm text-gray-400">
							Skills: C#, ZBrush, Substance Painter, Adobe Suite, Unity, Unreal Engine, Autodesk Maya, Character Rigging, JavaScript, C++, HTML
						</p>
						</div>
					</div>
				</div>
				<!-- Udemy Course 1 -->
				<div class="bg-[#18202e] rounded-xl p-6 shadow-md"> 
					<div class="flex gap-6 items-start">
						<img src="/logo/Udemy.webp" alt="Udemy Control Rig Course" class="w-16 h-16 object-contain mt-1" />
						<div>
							<h3 class="text-xl font-semibold text-white">Control Rig for Unreal Engine 5</h3>
							<p class="text-gray-300">Instructor: Lincoln Margison</p>
						</div>
					</div>
				</div>
				<!-- Udemy Course 2 -->
				<div class="bg-[#18202e] rounded-xl p-6 shadow-md"> 
					<div class="flex gap-6 items-start">
